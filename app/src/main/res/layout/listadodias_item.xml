<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/listado_dias_height"
        android:background="@android:drawable/list_selector_background"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="#003366" >

            <TextView
                android:id="@+id/dato_hora"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:text="15:25"
                android:textSize="16dp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dato_imagen"
                android:layout_width="fill_parent"
                android:layout_height="25dip"
                android:gravity="center"
                android:src="@drawable/fix_141477"
                android:background="#ffd379"
                />

            <TextView
                android:id="@+id/dato_frase"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dato_imagen"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#171075" />

            <TextView
                android:id="@+id/dato_frase2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dato_frase"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#4036c4" />
        </LinearLayout>
    </LinearLayout>
	 <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="#e8e8e8" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#FFFFFF" />

</LinearLayout>