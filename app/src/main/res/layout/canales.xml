<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dots="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F7F9EC"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/lytcabcanales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#00BCD4"
        android:padding="10dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/imgatrasc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/atras" />

        <TextView
            android:id="@+id/txttitulocab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="ARGENTINA"
            android:layout_toRightOf="@+id/imgatrasc"
            android:textSize="30sp"
            android:textColor="#FFFFFF"

            />

        <ImageView
            android:id="@+id/imgfiltro"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"

            android:src="@drawable/filtro" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout_canales_superior"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listado_dias_height"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_below="@+id/lytcabcanales">

        <LinearLayout
            android:id="@+id/lytcanaleshora"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="#003366">

            <TextView
                android:id="@+id/canales_hora"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/canales_imagen"
                android:layout_width="fill_parent"
                android:layout_height="25dip"
                android:gravity="center"
                android:src="@drawable/fix_141477"

                android:background="#ffd379" />

            <TextView
                android:id="@+id/canales_frase"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dato_imagen"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#171075" />

            <TextView
                android:id="@+id/canales_frase2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dato_frase"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#4036c4" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_below="@+id/layout_canales_superior"
        android:background="@drawable/drop_shadow"></View>

    <FrameLayout
        android:id="@+id/publicidad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:id="@+id/datos_canales_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/publicidad"
        android:layout_below="@+id/layout_canales_superior"></ScrollView>

</RelativeLayout>